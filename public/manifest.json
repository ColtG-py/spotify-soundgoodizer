{
  "manifest_version": 3,
  "name": "Spotify Pitch Shifter",
  "version": "1.0.0",
  "description": "Change pitch and speed of Spotify tracks for practice and learning",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "host_permissions": [
    "https://open.spotify.com/*"
  ],
  
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  
  "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
  },
  
  "content_scripts": [{
    "matches": ["https://open.spotify.com/*"],
    "js": ["src/content/content.ts"],
    "run_at": "document_start",
    "all_frames": false
  }],
  
  "background": {
    "service_worker": "src/background/background.ts"
  },
  
  "web_accessible_resources": [{
    "resources": ["inject.js"],
    "matches": ["https://open.spotify.com/*"]
  }]
}